@model RoleTopMVC.ViewModels.DashboardViewModel 
  <main>
        <h2>Dashboard</h2>

        <section id="status-pedidos">
            <h3>Status dos eventos</h3>
            <div id="painel">
                <div class="box-status-pedidos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.OrcamentosAprovados</p>
                </div>
                <div class="box-status-pedidos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.OrcamentosPendentes
                </div>
                <div class="box-status-pedidos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.OrcamentosReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-pedidos">
            <h3>Lista de Eventos</h3>
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">Data do Evento</th>
                        <th rowspan="2">Nome do Evento</th>
                        <th colspan="2">Quantidade de Pessoas</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                    <tr>
                        <th>Evento</th>
                        <th>NÂ° de pes.</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Eventos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                      @foreach(var orcamento in Model.Orcamentos )
                    {
                        <tr>
                            <td>@orcamento.Dataevento</td>
                            <td>@orcamento.Nome_evento</td>
                            <td>@orcamento.Quantidade</td>
                            
                            <td><a href='@Url.Action("Aprovar", "Orcamento", new {id = @orcamento.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Orcamento", new {id = @orcamento.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>