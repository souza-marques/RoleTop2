@model RoleTopMVC.ViewModels.HistoricoViewModel
@{
    ViewData["Title"] = "Reservas - RoleTop";
    ViewData["H2"] = "Histórico de Eventos";
}

<main>
    <h2>@ViewData["H2"]</h2>
    <table>
        <thead>
            <tr>
                <th>Quantidade de Pessoas</th>
                <th>Data do Evento</th>
                <th>Tipo de Evento</th>
                <th>Nome do Evento</th>
                <th>Status da reserva</th>
            </tr>
        </thead>
        <tbody>
            @foreach ( var orcamento in Model.Orcamentos){
                <tr>
                  <td>@orcamento.Quantidade</td>
                  <td>@orcamento.Dataevento</td>
                  <td>@orcamento.Tipo_evento</td>
                    <td>@orcamento.Nome_evento</td>
            
            @if (@orcamento.Status == 0)
            {
                <td>Seu evento está em análise.</td>
            } else if (@orcamento.Status == 1)
            {
                <td>Seu evento foi aprovado.</td>
            } else if(@orcamento.Status == 2)
            {
                <td>Seu evento foi reprovado.</td>
            }
                </tr>
            }
        </tbody>
    </table>

</main>